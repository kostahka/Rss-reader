<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/element_background">

    <TextView
        android:id="@+id/rss_item_title"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:text="Technology"/>

    <TextView
        android:id="@+id/rss_item_date"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="15sp"
        tools:text="03/11 - 17:27:00"/>

    <TextView
        android:id="@+id/rss_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="@integer/description_lines"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textSize="18sp"
        tools:text="BlaBlaBla"/>

</LinearLayout>